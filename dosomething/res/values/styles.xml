<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreen">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFrame">@null</item>
    </style>
    <style name="LoginLogo">
        <item name="android:src">@drawable/login_logo</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="LoginInputsLayout">
        <item name="android:background">@drawable/login_inputs_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">26dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LoginInput">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/login_input_background</item>
        <item name="android:textColor">@color/login_input_text</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="LoginButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="FacebookLoginButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="RegisterDisclaimer">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/register_disclaimer_text</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RequiredInstructions">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/required_instructions_text</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RegisterInput">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RegisterLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/register_label</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RegisterCancelButton">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/secondary_button_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        
    </style>
    <style name="RegisterButton">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="ProfileNoCampaignsLayout">
        <item name="android:background">@color/profile_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <style name="ProfileNoCampaignsInner">
        <item name="android:background">@drawable/profile_no_campaigns_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>
    
    <style name="ProfileNoCampaignsText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/profile_no_campaigns_text</item>
    </style>
    <style name="ProfileNoCampaignsButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="CampaignRowImage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">156dp</item>
        <item name="android:layout_margin">2dp</item>

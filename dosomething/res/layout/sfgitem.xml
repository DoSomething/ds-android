<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_background"
    xmlns:app="http://schemas.android.com/apk/res/org.dosomething.android">
    
    <org.dosomething.android.widget.CustomActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" />

    <ScrollView
        android:orientation="vertical"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">
		    <FrameLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content">
			    <ImageView
			        android:id="@+id/image"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:scaleType="fitCenter"/>
			    <ProgressBar
		            android:id="@+id/progressBar"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center" />
			</FrameLayout>
			<TextView
		        android:id="@+id/share_count"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textColor="@color/dark_blue"
		        android:textSize="@dimen/font_size_header_label"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
			<Button
			    android:id="@+id/shareButton"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_margin="10dp"
			    android:padding="6dp"
			    android:background="@drawable/share_button_selector"
			    android:gravity="center"
			    android:text="@string/campaign_sfg_share_me"
			    android:textColor="@color/white"
			    android:textSize="@dimen/font_size_header_label"
			    android:textStyle="bold"/>
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp">
		        <TextView
		            android:id="@+id/shelter"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:textColor="#000"
		            android:textSize="@dimen/font_size_medium"/>
		        <TextView
		            android:id="@+id/location"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:textColor="#000"
		            android:textSize="@dimen/font_size_medium"/>
		    </RelativeLayout>
		    <TextView
		        android:id="@+id/story"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="10dp"
		        android:textColor="#000"/>
	   </LinearLayout>
	</ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/WebFormRow">

    <TextView
        android:id="@+id/label_school_search_state"
        android:text="@string/school_search_state_label"
        style="@style/WebFormRowLabel"/>

    <Spinner
        android:id="@+id/field_school_search_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_school_search_state"/>

    <TextView
        android:id="@+id/label_school_search_name"
        android:layout_below="@id/field_school_search_state"
        android:text="@string/school_search_name_label"
        style="@style/WebFormRowLabel"/>

    <EditText
        android:id="@+id/field_school_search_name"
        android:inputType="text"
        android:layout_below="@id/label_school_search_name"
        style="@style/WebFormRowInput"/>

    <Button
        android:id="@+id/school_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/field_school_search_name"
        android:gravity="center"
        android:text="@string/school_search_button_label"/>

    <TextView
        android:id="@+id/label_school_search_results"
        android:layout_below="@id/school_search"
        android:text="@string/school_search_no_results_label"
        android:visibility="gone"
        style="@style/WebFormRowLabel" />

    <Spinner
        android:id="@+id/field_school_search_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_school_search_results"
        android:visibility="gone"/>
</RelativeLayout>
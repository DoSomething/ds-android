<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/light_background"
    xmlns:app="http://schemas.android.com/apk/res/org.dosomething.android">
    
    <org.dosomething.android.widget.CustomActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar" />
    <org.dosomething.android.widget.ActionBarSubMenu 
        android:id="@+id/actionbar_submenu"
        style="@style/ActionBarSubMenu"/>
    
    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/dark_grey_background">
        <Spinner
            android:id="@+id/type_filter"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="4"/>
        <Spinner
            android:id="@+id/location_filter"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="4"/>
        <Button
            style="@style/FilterSubmitButton"
            android:id="@+id/filter_execute"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:text="@string/go_upper"
            android:layout_weight="2"/>
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:divider="#00000000" />
        
</LinearLayout>
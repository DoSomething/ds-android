<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.dosomething.android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_background"
    android:orientation="vertical" >

    <org.dosomething.android.activities.CustomActionBar
        android:id="@+id/actionbar"
        style="@style/ActionBar"
        app:title="@string/register_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:fillViewport="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                style="@style/RegisterLabel"
                android:text="@string/username_upper" />

            <EditText
                android:id="@+id/username_name"
                style="@style/RegisterInput"
                android:inputType="text" />

            <TextView
                style="@style/RegisterLabel"
                android:text="@string/mobile_upper" />

            <EditText
                android:id="@+id/mobile"
                style="@style/RegisterInput"
                android:inputType="phone" />

            <TextView
                style="@style/RegisterLabel"
                android:text="@string/first_name_upper" />

            <EditText
                android:id="@+id/first_name"
                style="@style/RegisterInput"
                android:inputType="textPersonName" />

            <TextView
                style="@style/RegisterLabel"
                android:text="@string/last_name_upper" />

            <EditText
                android:id="@+id/last_name"
                style="@style/RegisterInput"
                android:inputType="textPersonName" />

            <TextView
                style="@style/RegisterLabel"
                android:text="@string/email_address_upper" />

            <EditText
                android:id="@+id/email"
                style="@style/RegisterInput"
                android:inputType="textEmailAddress" />

            <TextView
                style="@style/RegisterLabel"
                android:text="@string/password_upper" />

            <EditText
                android:id="@+id/password"
                style="@style/RegisterInput"
                android:inputType="textPassword" />

            <TextView
                style="@style/RegisterLabel"
                android:text="@string/confirm_password_upper" />

            <EditText
                android:id="@+id/confirm_password"
                style="@style/RegisterInput"
                android:inputType="textPassword" />

            <TextView
                style="@style/RegisterLabel"
                android:text="@string/birthday_upper" />

            <EditText
                android:id="@+id/birthday"
                style="@style/RegisterInput"
                android:inputType="date" />

            <TextView
                android:id="@+id/disclaimer"
                style="@style/RegisterDisclaimer" />

            <TextView
                style="@style/RequiredInstructions"
                android:text="@string/required_instructions" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/cancel"
                    style="@style/RegisterCancelButton"
                    android:layout_weight="1.0"
                    android:onClick="cancel"
                    android:text="@string/cancel_upper" />

                <Button
                    android:id="@+id/submit"
                    style="@style/RegisterButton"
                    android:layout_weight="1.0"
                    android:onClick="register"
                    android:text="@string/go_upper" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>